<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.amit.reflexreactor">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Single_player"
            android:label="@string/title_activity_single_player"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Multi_player"
            android:label="@string/title_activity_multi_player"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Score_board"
            android:label="@string/title_activity_score_board"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Invites"
            android:label="@string/title_activity_invites"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Online"
            android:label="@string/title_activity_online"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Offline"
            android:label="@string/title_activity_offline"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Create_game"
            android:label="@string/title_activity_create_game"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Join_game"
            android:label="@string/title_activity_join_game"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Category"
            android:label="@string/title_activity_category"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Questions"
            android:label="@string/title_activity_questions"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

    </application>

</manifest>
